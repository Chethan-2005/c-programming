#include <stdio.h>
#include <string.h>

int main() {
    char statement[1000];
    int length, i, sentenceCount;

    printf("Enter a statement: ");
    fgets(statement, 1000, stdin);

    length = strlen(statement);
    sentenceCount = 0;

    for (i = 0; i < length; i++) {
        if (statement[i] == '.' || statement[i] == '!' || statement[i] == '?') {
            sentenceCount++;
        }
    }

    printf("Number of sentences in the statement: %d", sentenceCount);

    return 0;
}
